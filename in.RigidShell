region spawner block -7 2 -7 7 -7 7 units box
region spawner2 block  5 7 -7 7 -7 7 units box

pair_style gran/hertz/history 49777777.78 64000000 50000 30000 0.25 1
pair_coeff * *
timestep 0.00005
run_style verlet



bond_style	zero
angle_style	zero
bond_coeff	*
angle_coeff	* 75.0

molecule spheres sphere.mol
molecule cubes cube.mol



create_atoms 1 random 10 1729871 spawner2 mol spheres 1729871 overlap 0.1
create_atoms 1 random 50 1729871 spawner mol cubes 1729871 overlap 0.1
